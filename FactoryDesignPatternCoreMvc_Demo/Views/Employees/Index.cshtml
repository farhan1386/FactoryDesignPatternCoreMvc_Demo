@model IEnumerable<FactoryDesignPatternCoreMvc_Demo.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-uppercase text-center">List of Employees</h3>

<p>
    <a asp-action="Create" class="btn btn-primary rounded-0">Add New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Position)</th>
            <th>@Html.DisplayNameFor(m => m.EmployeeNumber)</th>
            <th>@Html.DisplayNameFor(m => m.Department)</th>
            <th>@Html.DisplayNameFor(m => m.HourlyPay)</th>
            <th>@Html.DisplayNameFor(m => m.Bonus)</th>
            <th>@Html.DisplayNameFor(m => m.EmployeeTypeId)</th>
            <th>Action(s)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var employee in Model) {
        <tr>
            <td><a asp-action="Details" asp-route-id="@employee.Id">@employee.Name</a></td>
            <td>@employee.Position</td>
            <td>@employee.EmployeeNumber</td>
            <td>@employee.Department.DepartmentName</td>
            <td>$ @employee.HourlyPay</td>
            <td>$ @employee.Bonus</td>
            <td>@employee.EmployeeType.EmployeeTypeName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-info rounded-0">Edit</a>
                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger rounded-0">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model FactoryDesignPatternCoreMvc_Demo.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
<div class="card">
    <div class="card-header">
        <h4 class="text-uppercase">Delete Employee</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Position)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.Position)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.EmployeeNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.EmployeeNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Department)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.Department.DepartmentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.HourlyPay)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.HourlyPay)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.Bonus)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.Bonus)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(m => m.EmployeeTypeId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(m => m.EmployeeType.EmployeeTypeName)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-sm btn-danger rounded-0"><i class="fas fa-trash-alt"></i> Delete</button>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-info rounded-0"><i class="fas fa-pencil-alt"></i> Edit</a>
            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0"><i class="fas fa-backward"></i> Back to List</a>
        </form>
    </div>
</div>
